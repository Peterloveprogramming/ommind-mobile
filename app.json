{
  "expo": {
    "name": "lhamo",
    "slug": "lhamo",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/rinpoche_normal.png",
    "scheme": "lhamo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use the microphone."
      },
      "bundleIdentifier": "com.zimingtheking.mobile-movie-app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/rinpoche_normal.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.zimingtheking.mobile_movie_app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/rinpoche_normal.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/rinpoche_normal.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow mobile_movie_app to use the microphone for voice input and speech recognition.",
          "speechRecognitionPermission": "Allow mobile_movie_app to use speech recognition to enable voice commands and dictation.",
          "androidSpeechServicePackages": [
            "com.google.android.googlequicksearchbox"
          ]
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "react-native-audio-api",
        {
          "iosBackgroundMode": true,
          "iosMicrophonePermission": "This app requires access to the microphone to record audio.",
          "androidPermissions": [
            "android.permission.MODIFY_AUDIO_SETTINGS",
            "android.permission.FOREGROUND_SERVICE",
            "android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"
          ],
          "androidForegroundService": true,
          "androidFSTypes": [
            "mediaPlayback"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
